<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="test.separate_ctrl.Controller_opt"
      fillHeight="false" maxHeight="47.0" styleClass="opt_box" stylesheets="@test_ui.css" VBox.vgrow="NEVER">
    <children>
        <FlowPane alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
            <children>
                <Button id="menu_btn" mnemonicParsing="false" prefHeight="37.0" prefWidth="56.0" text="Button">
                    <FlowPane.margin>
                        <Insets left="5.0" />
                    </FlowPane.margin>
                </Button>
                <Button id="path_chooser_btn" mnemonicParsing="false" onAction="#pathBtnAction" prefHeight="37.0" prefWidth="56.0" text="Path">
                    <FlowPane.margin>
                        <Insets left="10.0" />
                    </FlowPane.margin>
                </Button>
            </children>
        </FlowPane>
        <FlowPane alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
            <children>
                <Button id="info_btn" mnemonicParsing="false" prefHeight="37.0" prefWidth="56.0" text="Button">
                    <FlowPane.margin>
                        <Insets right="5.0" />
                    </FlowPane.margin>
                </Button>
                <Button mnemonicParsing="false" prefHeight="37.0" prefWidth="56.0" text="Button">
                    <FlowPane.margin>
                        <Insets right="10.0" />
                    </FlowPane.margin>
                </Button>
            </children>
        </FlowPane>
    </children>
</HBox>
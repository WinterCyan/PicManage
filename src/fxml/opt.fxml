<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fillHeight="false" maxHeight="47.0" prefWidth="1005.0" styleClass="opt_box" stylesheets="@test_ui.css" VBox.vgrow="NEVER" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.OptController">
    <children>
        <FlowPane alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
            <children>
                <Button fx:id="menu_btn" mnemonicParsing="false" onAction="#menuBtnAction" prefHeight="37.0" prefWidth="56.0" text="Menu">
                    <FlowPane.margin>
                        <Insets left="5.0" />
                    </FlowPane.margin>
                </Button>
                <Button fx:id="path_chooser_btn" mnemonicParsing="false" onAction="#pathBtnAction" prefHeight="37.0" prefWidth="56.0" text="Path">
                    <FlowPane.margin>
                        <Insets left="5.0" />
                    </FlowPane.margin>
                </Button>
            <Label fx:id="path_text" text="Path: ">
               <font>
                  <Font size="20.0" />
               </font>
               <FlowPane.margin>
                  <Insets left="15.0" />
               </FlowPane.margin>
            </Label>
            <ProgressBar fx:id="progress_bar" visible="false" />
            </children>
         <HBox.margin>
            <Insets />
         </HBox.margin>
        </FlowPane>
        <FlowPane alignment="CENTER_RIGHT" columnHalignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
            <children>
                <Button fx:id="info_btn" mnemonicParsing="false" onAction="#infoBtnAction" prefHeight="37.0" prefWidth="56.0" text="Info">
                    <FlowPane.margin>
                        <Insets right="5.0" />
                    </FlowPane.margin>
                </Button>
            </children>
        </FlowPane>
    </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</HBox>
